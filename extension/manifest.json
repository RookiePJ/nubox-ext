{
  "manifest_version": 2,
  "name": "nuBox",
  "description": "This extension compliments nuBox to get NuCypher working on the browser side! Yay!",
  "version": "1.0",
  "author": "Robin Thomas",
  "background": {
    "scripts": [
      "background.js",
      "js/ipfs-http-client.min.js",
      "js/moment.min.js",
      "js/StreamSaver.js"
    ],
    "persistant": true
  },
  "externally_connectable": {
    "matches": [
      "https://nubox.herokuapp.com/",
      "http://localhost:4000/*"
    ],
    "ids": [
      "*"
    ]
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "nativeMessaging",
    "*://*/*",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "icons": {
    "128": "icons/logo_128x128.png"
  },
  "browser_action": {
    "default_title": "nuBox",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/logo_128x128.png"
    }
  },
  "content_scripts": [{
    "matches": [
        "*://*/*"
    ],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "web_accessible_resources": ["nubox.js"]
}
